{
  "name": "Orma",
  "manifest_version": 3,
  "version": "1.0.0",
  "description": "Intelligent memory manager for LLMs",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus",
    "notifications",
    "unlimitedStorage",
    "offscreen"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"],
      "css": ["css/app.css"]
    }
    /* Temporarily disabled ChatGPT context injection
    ,{
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": ["js/chatgpt-content.js"]
    }
    */
  ]
}